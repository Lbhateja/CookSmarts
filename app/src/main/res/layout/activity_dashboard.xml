<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yellow"
    android:orientation="vertical"
    android:id="@+id/drawer"
    tools:context=".activities.Dashboard">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
            android:layout_margin="8dp"
            app:cardElevation="15dp"
            app:cardCornerRadius="12dp"
            android:layout_width="match_parent"
            android:layout_height="380dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <com.denzcoskun.imageslider.ImageSlider
                    android:background="@drawable/a"
                    android:layout_margin="20dp"
                    android:id="@+id/image_slider"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    app:iss_auto_cycle="true"
                    app:iss_period="1200"
                    app:iss_delay="0"/>

                <TextView
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_gravity="end"
                    android:id="@+id/title"
                    android:text="Appetizers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"/>

                <TextView
                    android:layout_marginTop="10dp"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:textAlignment="center"
                    android:text="Super-Simple Last-Minute Appetizers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:padding="6dp"
                    android:background="@drawable/total_count_button"
                    android:layout_marginTop="10dp"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:textAlignment="center"
                    android:text="Number of Recipes: 9"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal" />

                <Button
                    android:id="@+id/Appetizers"
                    android:onClick="ViewAll"
                    android:layout_marginTop="22dp"
                    android:layout_gravity="center"
                    android:background="@drawable/view_all_button"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:text="View All"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


            </LinearLayout>

        </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
            android:layout_margin="20dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="12dp"
            android:layout_width="match_parent"
            android:layout_height="380dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <com.denzcoskun.imageslider.ImageSlider
                    android:layout_margin="20dp"
                    android:id="@+id/image_slider1"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    app:iss_auto_cycle="true"
                    app:iss_period="1300"
                    app:iss_delay="0"/>
                <TextView
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_gravity="end"
                    android:id="@+id/title1"
                    android:text="Main Course"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"/>

                <TextView
                    android:layout_marginTop="10dp"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:textAlignment="center"
                    android:text=""
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal" />

                <TextView
                    android:padding="6dp"
                    android:background="@drawable/total_count_button"
                    android:layout_marginTop="10dp"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:textAlignment="center"
                    android:text="Number of recipes: 10"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal" />

                <Button
                    android:id="@+id/MainCourse"
                    android:onClick="ViewAll"
                    android:layout_marginTop="22dp"
                    android:layout_gravity="center"
                    android:background="@drawable/view_all_button"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:text="View All"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


            </LinearLayout>

        </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_margin="20dp"
                app:cardElevation="8dp"
                app:cardCornerRadius="12dp"
                android:layout_width="match_parent"
                android:layout_height="380dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <com.denzcoskun.imageslider.ImageSlider
                        android:layout_margin="20dp"
                        android:id="@+id/image_slider2"
                        android:layout_width="match_parent"
                        android:layout_height="160dp"
                        app:iss_auto_cycle="true"
                        app:iss_period="1100"
                        app:iss_delay="0"/>
                    <TextView
                        android:textColor="@android:color/black"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:layout_gravity="end"
                        android:id="@+id/title2"
                        android:text="Dessets"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"/>

                    <TextView
                        android:layout_marginTop="10dp"
                        android:textColor="@android:color/black"
                        android:textSize="14sp"
                        android:textAlignment="center"
                        android:text=""
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal" />

                    <TextView
                        android:padding="6dp"
                        android:background="@drawable/total_count_button"
                        android:layout_marginTop="10dp"
                        android:textColor="@android:color/black"
                        android:textSize="14sp"
                        android:textAlignment="center"
                        android:text="Number Of Recipes: 10"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal" />

                    <Button
                        android:id="@+id/Desserts"
                        android:onClick="ViewAll"
                        android:layout_marginTop="22dp"
                        android:layout_gravity="center"
                        android:background="@drawable/view_all_button"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:text="View All"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    </RelativeLayout>


    <com.google.android.material.navigation.NavigationView
        android:background="@color/yellow"
        android:id="@+id/navigationView"
        android:layout_gravity="start"
        app:headerLayout="@layout/navbar_header"
        app:menu="@menu/main_menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


</androidx.drawerlayout.widget.DrawerLayout>